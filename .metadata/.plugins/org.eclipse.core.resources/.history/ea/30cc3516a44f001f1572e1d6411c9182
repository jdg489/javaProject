package Soccer;

import java.util.Calendar;

public class DatePrinter {
	
	// 캘린더 클래스를 파라미터로 전달받아
	// 그 객체가 포함하고 있는 시각을 출력하는 메소드
	
	public static void printDateTime(Calendar cal) {
		
		// 년, 월, 일, 시, 분, 초 => 24시간제
		int yy = cal.get(Calendar.YEAR);
		// 자바에서의 월은 0부터 시작된다.
		int mm = cal.get(Calendar.MONTH) + 1; // MONTH  월을 나타냄
		int dd = cal.get(Calendar.DAY_OF_MONTH); // DAY_OF_MONTH  현재 월 내에서의 일을 나타냄 
		int hh = cal.get(Calendar.HOUR_OF_DAY); // HOUR_OF_DAY  시간을 나타내는 상수
		int mi = cal.get(Calendar.MINUTE); // MINUTE 시간의 분을 나타내는 상수
		int ss = cal.get(Calendar.DAY_OF_MONTH);
	}
}
